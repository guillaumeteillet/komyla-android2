<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#3CCF79"
    android:id="@+id/activity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logohome1"/>

    <com.facebook.widget.LoginButton
        android:id="@+id/btnConnectFB"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/plus_sign_in_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnConnectFB"
     />

    <Button
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:text="@string/connectwithlizzaccount"
    android:id="@+id/btnConnectLizz"
        android:background="#FFFFFF"
        android:layout_marginTop="5dp"
    android:layout_below="@+id/plus_sign_in_button"
    android:layout_centerHorizontal="true" />

    <Button
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/createnewlizzaccount"
        android:id="@+id/btnNewAccountLizz"
        android:layout_below="@+id/btnConnectLizz"
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
